{
  "name": "ali-baba-combat-simulator",
  "version": "1.0.0",
  "description": "A TypeScript combat simulator based on the 1982 Apple II game Ali Baba and the Forty Thieves",
  "main": "dist/js/engine.js",
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint && node scripts/generate-version.js",
    "clean": "rm -rf dist",
    "copy": "mkdir -p dist && cp public/index.html public/styles.css dist/",
    "compile": "tsc",
    "build": "npm run clean && npm run compile && npm run copy",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "combat",
    "simulator",
    "typescript",
    "ali-baba"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0"
  }
}
